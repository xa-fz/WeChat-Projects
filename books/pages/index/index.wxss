.book-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.box {
  width: 50%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
image {
  width: 200rpx;
  height: 300rpx;
}
text {
  text-align: center;
}
.loading-container {
  height: 100vh;
  background-color: silver;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
progress {
  width: 80%;
}